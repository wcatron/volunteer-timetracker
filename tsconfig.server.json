{
	"compilerOptions": {
		"module": "commonjs",
		"removeComments": false,
		"preserveConstEnums": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "build-server",
		"rootDirs": ["src"],
		"target": "es6",
        "jsx": "react",
		"allowJs": true
	},
	"exclude": [
		"node_modules",
		"test"
	],
	"include": [
		"./src/**/*.js",
		"./src/**/*.ts",
        "./src/**/*.tsx",
		"./typings/index.d.ts"
	]
}